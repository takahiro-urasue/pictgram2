<div class="profile-wrap">
  <div class="row">
    <div class="col-md-5 text-center">
      <%= image_tag avatar_url(@user), class: "round-img" %>
    </div>
    <div class="col-md-5">
      <div class="user-row">
        <h1 class="user-name"><%= @user.name %></h1>
        <p class="user-mail"><%= @user.email %></p>
        <%= link_to "プロフィールを編集", topic_path, class: "btn btn-outline-dark common-btn edit-profile-btn" %>
      </div>
    </div>
  </div>
</div>
