<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h1 class="text-center text-white">Sign in</h1>
        <%= form_for @user do |f| %>
          <div class="form-group">
            <%# <%= f.label :name, class: 'text-white' %>
            <%= f.text_field :name, class: 'form-control',placeholder: "ユーザー名(15文字以内)" %>
          </div>
          <div class="form-group">
            <%# <%= f.label :email, class: 'text-white' %>
            <%= f.text_field :email, class: 'form-control',placeholder: "メールアドレス" %>
          </div>
          <div class="form-group">
            <%# <%= f.label :password, class: 'text-white'  %>
            <%= f. password_field :password, class: 'form-control',placeholder: "パスワード(半角英数字混合8〜32文字)" %>
          </div>
          <div class="form-group">
            <%# <%= f.label :password_confirmation, class: 'text-white' %>
            <%= f.password_field :password_confirmation, class: 'form-control',placeholder: "パスワード(確認用再入力)" %>
          </div>

          <%= f.submit "登録", class: 'btn-block btn-white' %>
        <% end %>
          <%= link_to 'アカウントをお持ちの方はこちら', login_path, class: 'sign-in-navigation' %>
        </div>
    </div>
  </div>
</div>
